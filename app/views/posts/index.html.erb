<div class="row">
  <% for post in @posts %>
    <div class="col-12 col-md-6 col-lg-3 mb-4 d-flex">
      <div class="card w-100 d-flex flex-column">
        <div class="card-body d-flex flex-column">
          <h4 class="h5 card-title"><%= post["author"] %></h4>
          <img
            class="img-fluid w-100 rounded mb-3"
            src="<%= post["image"] %>"
            style="height: 220px; object-fit: contain; background-color: #f8f9fa;"
          >
          <p class="card-text mb-3"><%= post["body"] %></p>
          <%= button_to "Delete", "/posts/#{post.id}", method: :delete, class: "btn btn-sm btn-outline-danger", form_class: "mt-auto" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
