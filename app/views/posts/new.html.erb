<h1>New Post</h1>

<%= form_with model: @post, url: "/posts", method: :post, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :author, class: "form-label" %>
    <%= form.text_field :author, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_field :body, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :image, class: "form-label" %>
    <%= form.text_field :image, class: "form-control" %>
  </div>

  <%= form.submit "Create Post", class: "btn btn-primary" %>
<% end %>
